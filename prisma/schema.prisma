generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Change this to "postgresql" or "mysql" for production
  url      = env("DATABASE_URL")
}

model Url {
  id        Int      @id @default(autoincrement())
  shortCode String   @unique
  longUrl   String
  userId    String?  // Nullable for guest users
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  visits    Visit[]
}


model Visit {
  id        Int      @id @default(autoincrement())
  urlId     Int
  url       Url      @relation(fields: [urlId], references: [id], onDelete: Cascade) // ðŸ”¥ Ensures clean DB
  ip        String
  userAgent String
  referrer  String
  createdAt DateTime @default(now())
}
